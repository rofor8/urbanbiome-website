---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css'; // Correct way to import CSS in Astro
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Segoe+UI&display=swap" rel="stylesheet">
    <!-- The line below is no longer needed as the CSS is imported above via Astro's bundling -->
    <!-- <link rel="stylesheet" href="/src/styles/global.css"> -->
</head>
<body>
    <slot />
</body>
</html>
