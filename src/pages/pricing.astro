<style>
  .legal-page {
    padding: 40px 0;
  }

  .pricing-section {
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing-card {
    background-color: var(--light-bg);
    border: 1px solid var(--border-color);
    border-radius: 15px;
    padding: 50px;
    max-width: 600px;
    margin: 0 auto 80px;
    text-align: center;
    position: relative;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  }

  .badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: var(--primary-accent);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .pricing-card h2 {
    color: var(--primary-accent);
    margin-bottom: 20px;
  }

  .price {
    margin-bottom: 40px;
  }

  .amount {
    font-size: 4rem;
    font-weight: bold;
    color: var(--heading-color);
    display: block;
  }

  .period {
    font-size: 1.2rem;
    color: var(--text-color);
  }

  .features {
    text-align: left;
    margin-bottom: 40px;
    background-color: var(--background-color);
    padding: 30px;
    border-radius: 10px;
    border: 1px solid var(--border-color);
  }

  .features h3 {
    color: var(--primary-accent);
    margin-bottom: 20px;
    font-size: 1.3rem;
    text-align: center;
  }

  .features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features li {
    padding: 12px 0;
    border-bottom: 1px solid var(--border-color);
    color: var(--text-color);
    font-size: 1rem;
  }

  .features li:last-child {
    border-bottom: none;
  }

  .disclaimer {
    font-size: 0.9rem;
    color: var(--text-color);
    margin-top: 20px;
    line-height: 1.4;
    opacity: 0.8;
  }

  .features-grid {
    text-align: center;
    margin-bottom: 60px;
  }

  .features-grid h2 {
    color: var(--heading-color);
    margin-bottom: 40px;
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 15px;
  }

  @media (max-width: 768px) {
    .pricing-card {
      padding: 30px 20px;
      margin: 0 20px 60px;
    }
    
    .amount {
      font-size: 3rem;
    }
    
    .features {
      padding: 20px;
    }
  }
</style>