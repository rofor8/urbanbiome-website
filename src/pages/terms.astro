    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .legal-content {
    background: rgba(25, 25, 25, 0.98);
    border: 1px solid rgba(100, 200, 100, 0.3);
    border-radius: 15px;
    padding: 40px;
    line-height: 1.6;
  }

  .legal-content section {
    margin-bottom: 40px;
  }

  .legal-content h2 {
    color: rgba(100, 200, 100, 1);
    font-size: 1.8rem;
    margin-bottom: 20px;
  }

  .legal-content p {
    margin-bottom: 15px;
    color: rgba(255, 255, 255, 0.9);
  }

  .legal-content ul {
    padding-left: 20px;
    margin-bottom: 15px;
  }

  .legal-content li {
    margin-bottom: 8px;
    color: rgba(255, 255, 255, 0.9);
  }

  .legal-footer {
    text-align: center;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .legal-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .legal-links a {
    color: rgba(100, 200, 100, 1);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .legal-links a:hover {
