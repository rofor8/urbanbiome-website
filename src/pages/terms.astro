---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Terms of Service - UrbanBiome">
  <nav class="navbar">
    <div class="container">
      <a href="/" class="logo">
        <img src="/images/logo.svg" alt="UrbanBiome" class="logo-image" />
      </a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
      </ul>
    </div>
  </nav>

